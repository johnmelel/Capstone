# Google Cloud Storage Configuration
GCS_BUCKET_NAME=your-bucket-name
GCS_BUCKET_PREFIX=documents  # Optional: folder/prefix in bucket (leave empty for root)
GOOGLE_SERVICE_ACCOUNT_JSON=service_account.json
GCS_RECURSIVE=true  # Set to false to only process from prefix folder, not subfolders

# Milvus Configuration
MILVUS_URI=your-milvus-uri
MILVUS_API_KEY=your-api-key
MILVUS_COLLECTION_NAME=pdf_embeddings

# Gemini Embedding Configuration
GEMINI_API_KEY=your-gemini-api-key
EMBEDDING_MODEL=text-embedding-005
MAX_TOKENS_PER_CHUNK=2048  # Max tokens for Gemini embeddings

# Processing Configuration
CHUNK_SIZE=1500  # Characters (will be validated against token limit)
CHUNK_OVERLAP=150
BATCH_SIZE=100

# MinerU PDF Extraction Configuration
MINERU_BACKEND=pipeline  # pipeline (recommended), vlm-transformers, vlm-vllm-engine
MINERU_MODEL_SOURCE=huggingface  # huggingface, modelscope, local
MINERU_LANG=en  # OCR language: en, ch, auto, etc.
PDF_EXTRACTION_TIMEOUT=900  # Timeout in seconds (900 = 15 minutes)
MINERU_DEBUG_MODE=false  # Keep temporary files for debugging (true/false)
MINERU_ENABLE_TABLES=false  # Enable table extraction (Phase 2 feature)
MINERU_ENABLE_FORMULAS=false  # Enable formula extraction (Phase 2 feature)
