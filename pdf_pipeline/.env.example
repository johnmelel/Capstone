# PDF Pipeline Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================================================
# Google Cloud Storage Configuration
# ============================================================================
# Path to your Google Cloud service account JSON key file
GOOGLE_SERVICE_ACCOUNT_JSON="path/to/your/service-account.json"

# GCS bucket name containing your PDF files
GCS_BUCKET_NAME="your-gcs-bucket-name"

# Prefix/folder path in the bucket (e.g., "documents/" or "" for root)
GCS_BUCKET_PREFIX="your-prefix/"

# Local directory to download PDFs (default: /tmp/pdf_downloads)
DOWNLOAD_DIR="/tmp/pdf_downloads"

# Whether to download from subfolders recursively (default: True)
GCS_RECURSIVE="True"

# ============================================================================
# Milvus Vector Database Configuration
# ============================================================================
# Milvus server URI (e.g., "https://your-cluster.milvus.io:19530")
MILVUS_URI="your-milvus-uri"

# Milvus API key/token for authentication
MILVUS_API_KEY="your-milvus-api-key"

# Name of the Milvus collection to store embeddings (default: pdf_embeddings)
MILVUS_COLLECTION_NAME="pdf_embeddings"

# ============================================================================
# Google Generative AI Configuration
# ============================================================================
# Google API key for Generative AI services
GOOGLE_API_KEY="your-google-api-key"

# Embedding model to use (default: models/embedding-001)
EMBEDDING_MODEL="models/embedding-001"

# LLM model for text generation (default: gemini-1.5-pro)
LLM_MODEL="gemini-1.5-pro"

# ============================================================================
# RAG-Anything / MinerU Configuration
# ============================================================================
# Device to use for MinerU processing: "cuda", "cpu", or "mps" (default: cuda)
MINERU_DEVICE="cuda"

# ============================================================================
# Data Processing Configuration
# ============================================================================
# Directory to store processed data files (default: /tmp/processed_data)
PROCESSED_DATA_DIR="/tmp/processed_data"

# ============================================================================
# Logging Configuration
# ============================================================================
# Log file path (default: pipeline.log)
LOG_FILE="pipeline.log"

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL (default: INFO)
LOG_LEVEL="INFO"
